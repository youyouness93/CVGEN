generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CV {
  id            String    @id @default(cuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  originalCV    Json      // Le CV original importé
  jobData       Json?     // Description du poste (optionnel)
  optimizedCV   Json?     // Le CV optimisé par GPT (optionnel)
  status        String    @default("pending") // pending, processing, completed, error
  error         String?   // Message d'erreur si status est "error"
  userId        String?   // Pour une future authentification
}
